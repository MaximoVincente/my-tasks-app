<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TaskFragment"
    tools:layout_editor_absoluteY="81dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/TaskFragment"
        android:layout_width="365dp"
        android:layout_height="520dp"
        android:layout_marginTop="8dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <TextView
        android:id="@+id/FragmentTVTaskTitle"
        android:layout_width="335dp"
        android:layout_height="72dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/rosario_bold"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#ACECF4"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/FragmentTVTaskDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FragmentSpinnerState" />

    <TextView
        android:id="@+id/FragmentTVTaskDescription"
        android:layout_width="324dp"
        android:layout_height="366dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/rosario_bold"
        android:paddingStart="29dp"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="#ACECF4"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/FragmentTVTaskTitle"
        tools:layout_editor_absoluteX="43dp" />

    <Spinner
        android:id="@+id/FragmentSpinnerState"
        android:layout_width="110dp"
        android:layout_height="34dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="23dp"
        android:background="@color/material_dynamic_neutral30"
        android:popupBackground="@color/material_dynamic_neutral30"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/FragmentTVTaskTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>