<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ActivitySettingsPageETUsername"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2">

    <EditText
        android:id="@+id/ActivitySettingsPageEditTextUsername"
        android:layout_width="338dp"
        android:layout_height="67dp"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:fontFamily="@font/rosario_bold"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="#ACECF4"
        android:textColorHint="#ACECF4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ActivitySettingsPageButtonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="287dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:fontFamily="@font/rosario_bold"
        android:soundEffectsEnabled="true"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SettingsPageActivitySpinnerAddTeam" />

    <Spinner
        android:id="@+id/SettingsPageActivitySpinnerAddTeam"
        android:layout_width="321dp"
        android:layout_height="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="44dp"
        android:background="@color/material_dynamic_neutral30"
        android:popupBackground="@color/material_dynamic_neutral30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ActivitySettingsPageEditTextUsername" />
</androidx.constraintlayout.widget.ConstraintLayout>