<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TaskFragment"
    tools:layout_editor_absoluteY="81dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/TaskFragment"
        android:layout_width="366dp"
        android:layout_height="523dp"
        android:layout_marginTop="8dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <TextView
        android:id="@+id/FragmentTVTaskTitle"
        android:layout_width="309dp"
        android:layout_height="58dp"
        android:layout_marginEnd="40dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#ACECF4"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/FragmentTVTaskDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FragmentTVTaskState"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/FragmentTVTaskDescription"
        android:layout_width="322dp"
        android:layout_height="406dp"
        android:paddingStart="29dp"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="#ACECF4"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/TaskFragment"
        app:layout_constraintTop_toBottomOf="@+id/FragmentTVTaskTitle"
        tools:layout_editor_absoluteX="35dp" />

    <TextView
        android:id="@+id/FragmentTVTaskState"
        android:layout_width="112dp"
        android:layout_height="28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:background="@color/cardview_dark_background"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#ACECF4"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/FragmentTVTaskTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TaskFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>