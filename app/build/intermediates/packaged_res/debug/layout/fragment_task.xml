<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TaskFragment"
    tools:layout_editor_absoluteY="81dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/TaskFragment"
        android:layout_width="328dp"
        android:layout_height="566dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.259" />

    <TextView
        android:id="@+id/FragmentTVTaskTitle"
        android:layout_width="303dp"
        android:layout_height="57dp"
        android:text="TextView"
        android:textColor="#ACECF4"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/FragmentTVTaskDescription"
        app:layout_constraintTop_toBottomOf="@+id/TaskFragment"
        tools:layout_editor_absoluteX="53dp" />

    <TextView
        android:id="@+id/FragmentTVTaskDescription"
        android:layout_width="307dp"
        android:layout_height="353dp"
        android:text="TextView"
        android:textColor="#ACECF4"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/FragmentTVTaskState"
        app:layout_constraintTop_toBottomOf="@+id/FragmentTVTaskTitle"
        tools:layout_editor_absoluteX="55dp" />

    <TextView
        android:id="@+id/FragmentTVTaskState"
        android:layout_width="112dp"
        android:layout_height="28dp"
        android:background="#536487"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#ACECF4"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/TaskFragment"
        app:layout_constraintTop_toBottomOf="@+id/FragmentTVTaskDescription"
        tools:layout_editor_absoluteX="55dp" />

</androidx.constraintlayout.widget.ConstraintLayout>