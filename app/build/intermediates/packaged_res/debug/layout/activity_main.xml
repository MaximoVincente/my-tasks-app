<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/MainActivityTextViewHomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Tasks"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <Button
        android:id="@+id/MainActivityAddTaskButton"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="432dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="133dp"
        android:text="Add Task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/MainActivityAllTasksButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainActivityTextViewHomeTitle"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/MainActivityAllTasksButton"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="432dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="133dp"
        android:text="All Tasks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MainActivityAddTaskButton"
        app:layout_constraintTop_toBottomOf="@+id/MainActivityTextViewHomeTitle"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/MainActivityTextViewCreateSettingsTask"
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="19dp"
        android:text="Create Settings Page"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/MainActivityTextViewCreateTaskDetailPageTask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainActivityTextViewHomeTitle"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/MainActivityTextViewCreateTaskDetailPageTask"
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="45dp"
        android:text="Create Task Detail Page"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainActivityTextViewHomeTitle" />

    <TextView
        android:id="@+id/MainActivityTextViewDisplayUsernameTask"
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="45dp"
        android:text="Display Username in Home Page"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainActivityTextViewCreateTaskDetailPageTask" />

    <ImageView
        android:id="@+id/MainActivityImageViewSettingsPage"
        android:layout_width="45dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:background="#D7E4F1"
        android:clickable="true"
        android:contextClickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_manage" />

</androidx.constraintlayout.widget.ConstraintLayout>